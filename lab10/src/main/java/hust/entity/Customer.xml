<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="main.java.hust.entity.Customer">
        <table name="customer" schema="emarket" catalog=""/>
        <attributes>
            <id name="customerId">
                <column name="customer_id" precision="10"/>
            </id>
            <basic name="name">
                <column name="name" length="45"/>
            </basic>
            <basic name="email">
                <column name="email" length="45"/>
            </basic>
            <basic name="phone">
                <column name="phone" length="45"/>
            </basic>
            <basic name="address">
                <column name="address" length="45"/>
            </basic>
            <basic name="cityRegion">
                <column name="city_region" length="20"/>
            </basic>
            <basic name="ccNumber">
                <column name="cc_number" length="19"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
